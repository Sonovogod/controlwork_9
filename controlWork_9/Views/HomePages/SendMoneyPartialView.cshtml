@model controlWork_9.ViewModels.Accounts.SendMoneyViewModel

<div class="modal fade" id="sendModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Перевод денег</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="editProfileBlock">
          <form>
            <div class="container">
              <form method="post" asp-antiforgery="true" enctype="multipart/form-data" id="sendMoney">
                <div class="mb-3">
                  <label for="sendSumm" class="form-label" asp-for="Summ"></label>
                  <input type="text" class="form-control" id="sendSumm" asp-for="Summ">
                  <span class="text-danger" asp-validation-for="Summ"></span>
                </div>
                <div class="mb-3">
                    <label for="sendNumber" class="form-label" asp-for="AccountNumber"></label>
                    <input type="text" class="form-control" id="sendNumber" asp-for="AccountNumber">
                    <span class="text-danger" asp-validation-for="AccountNumber"></span>
                  </div>
                <input hidden="hidden" asp-for="UserName" value="@Model.UserName" id="sendUserName">
                <p class="text-danger mx-2" id="topUpError"></p>
              </form>
              <div class="text-danger" asp-validation-summary="All"></div>
            </div>
          </form>
        </div>
      </div>
      <div class="text-danger" id="sendErrors"></div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="closeSendButton">Закрыть</button>
        <button type="button" class="btn btn-primary" id="sendSummButton">Отправить</button>
      </div>
    </div>
  </div>
</div>